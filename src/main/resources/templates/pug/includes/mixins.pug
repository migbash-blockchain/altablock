            h2= headText
    .container(style="display: flex; align-items: center;")
      img(style="width: 16px; height: 16px;" th:src="@{/images/info_vector.png}" alt="info_vector")
      span.p-2(style="width: 75%;")= info_txt1

//- ----------------------
//-       Buttons
//- ----------------------
mixin main_btn_img(btnText, img_src)
    button.button_main(type="button")&attributes(attributes)
        img(th:src=img_src alt= btnText)
        span= btnText

mixin img_btn(img_src)
    button.button_main(type="button")&attributes(attributes)
        //- object(th:data=img_src type="image/svg+xml" style="fill:red;")
        svg(style="fill: red; stroke: red;")
            use(th:xlink:href= img_src)

//- ----------------------
//-     Input Forms
//- ----------------------
mixin input_form(inputHeader, inputID)
    label(for="recipient_address" class="control-label")= inputHeader
    input(id=inputID autocomplete="off" type="text" class="form-control" aria-describedby="basic-addon3" required)

//- ----------------------
//- BlockMatrix Info Blocks
//- ----------------------
mixin info_block(img_src, title, data)
    .col-lg-6.col-sm-4
        .innerDiv
            h6
                strong= title
            img(style="width: 32px; height: 32px;" th:src= img_src alt="block_vector")
            h4(th:text= data)&attributes(attributes)

//- ----------------------
//-       Footer
//- ----------------------
mixin footer_menu(name, href)
    li.m-3
        a(href=href)= name
